aws_region          = "us-east-1"

# Use a testing or staging AMI ID here, maybe a smaller instance or different AMI
ec2_ami_id          = "ami-0abcdef1234567890"

ec2_instance_type   = "t3.medium"  # Smaller instance for dev to save cost

# Your dev environment SSH key pair
ec2_key_name        = "your-dev-keypair"

# Subnet ID for dev environment (can be same or different VPC subnet)
