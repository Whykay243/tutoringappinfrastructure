# Security groups for dev (could be more open for testing)
ec2_security_groups = ["sg-0123456789abcdef0"]

# RDS dev database master username and password (use test creds)
rds_username        = "dev_master_user"
rds_password        = "your-dev-db-password"

# DockerHub username to pull your Docker image (usually same as prod)
dockerhub_username  = "yajibola0011"

